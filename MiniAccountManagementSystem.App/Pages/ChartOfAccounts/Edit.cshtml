@page "{id:int}"
@model MiniAccountManagementSystem.App.Pages.ChartOfAccounts.EditModel
@{
    ViewData["Title"] = "Edit Account";
}

<h2>Edit Account</h2>

<form method="post">
    <input type="hidden" asp-for="AccountId" />
    <div class="form-group my-3">
        <label asp-for="AccountName"></label>
        <input asp-for="AccountName" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="ParentAccountId">Parent Account</label>
        <select asp-for="ParentAccountId" class="form-control" asp-items="Model.ParentAccounts"></select>
    </div>

    <div class="form-group my-3">
        <label asp-for="AccountType"></label>
        <select asp-for="AccountType" class="form-control">
            <option value="Asset">Asset</option>
            <option value="Liability">Liability</option>
            <option value="Equity">Equity</option>
            <option value="Income">Income</option>
            <option value="Expense">Expense</option>
        </select>
    </div>

    <div class="my-3">
        <button type="submit" class="btn btn-success">Update</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
